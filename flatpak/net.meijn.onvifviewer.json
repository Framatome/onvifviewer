{
    "app-id": "net.meijn.onvifviewer",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.12",
    "sdk": "org.kde.Sdk",
    "command": "onvifviewer",
    "finish-args": [
        "--socket=x11",
        "--share=network"
    ],
    "modules": [
        {
            "name": "kdsoap",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/KDAB/KDSoap.git",
                    "branch": "kdsoap-1.8.0"
                }
            ]
        },
        {
            "name": "kdsoap-ws-discovery-client",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DKDSOAP_PATH=KDSoap"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/caspermeijn/kdsoap-ws-discovery-client.git",
                    "branch": "master"
                },
                {
                    "type": "git",
                    "url": "https://github.com/KDAB/KDSoap.git",
                    "branch": "kdsoap-1.8.0",
                    "dest": "KDSoap"
                }
            ]
        },
        {
            "name": "onvifviewer",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DUSE_BREEZE_ICONS=ON"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": ".."
                }
            ]
        }
    ]
}
